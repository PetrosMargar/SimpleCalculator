<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/button7"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/button8"
            android:text="9" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/button9"
            android:text="/" />

        <Button
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button8"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button4"
            android:text="5" />


        <Button
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button9"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button5"
            android:text="6" />

        <Button
            android:id="@+id/button_multiple"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button_div"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button6"
            android:text="*" />

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button2"
            android:text="3" />

        <Button
            android:id="@+id/button_addition"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button_multiple"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button3"
            android:text="+" />


        <Button
            android:id="@+id/button0"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="0" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button0"
            android:text="=" />

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button_equals"
            android:text="-" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/button_subtract"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="CLEAR" />


    </RelativeLayout>


</LinearLayout>


